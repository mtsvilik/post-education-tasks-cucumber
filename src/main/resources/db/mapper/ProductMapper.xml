<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.posteducationtaskscucumber.saucedemo.db.persistence.ProductRepository">
    <insert id="create" keyColumn="id" keyProperty="product_id" useGeneratedKeys="true">
        insert into products (title, description, quantity, price) values (#{title},
        #{description}, #{quantity}, #{price})
    </insert>

    <select id="read" resultMap="ProductResultMap2">
        select id, title, description, quantity, price
        from products
        where id = #{id};
    </select>

    <resultMap id="ProductResultMap" type="com.solvd.posteducationtaskscucumber.saucedemo.db.domain.Product"
               autoMapping="false">
        <id property="id" column="product_id"/>
        <result property="title" column="product_title"/>
        <result property="description" column="product_description"/>
        <result property="quantity" column="product_quantity"/>
        <result property="price" column="product_price"/>
    </resultMap>

    <resultMap id="ProductResultMap2" type="com.solvd.posteducationtaskscucumber.saucedemo.db.domain.Product"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="quantity" column="quantity"/>
        <result property="price" column="price"/>
    </resultMap>

    <delete id="delete">
        delete from products where id = #{id}
    </delete>
</mapper>